<header class="header-global">
  <nav
    id="navbar-main"
    aria-label="Primary navigation"
    class="
      navbar navbar-main navbar-expand-lg navbar-theme-primary
      headroom
      navbar-light navbar-transparent navbar-theme-primary
    "
  >
    <div class="container position-relative">
      <a
        class="
          navbar-brand
          shadow-soft
          px-2
          rounded
          border border-light
          mr-lg-4
        "
        href="/"
      >
        <img
          src="/img/dLogo.png"
          style="width: 100px; height: 50px"
          alt="Logo dark"
        />
      </a>

      <div
        class="d-flex text-center justify-content-center align-items-center"
        role="contentinfo"
      >
        <ul class="d-flex list-unstyled mb-0">
          <%if(user.profileType === "provider") {%>
          <li class="mr-2">
            <a
              href="/make-post"
              class="btn btn-icon-only btn-pill btn-primary color-green"
              aria-label="makepost"
              data-toggle="tooltip"
              data-placement="top"
              title="Submit a Scholarship"
            >
              <span aria-hidden="true" class="fa fa-plus"></span>
            </a>
          </li>
          <%}%>
          <li>
            <a
              href="/logout"
              class="btn btn-icon-only btn-pill btn-primary color-red"
              aria-label="logout"
              data-toggle="tooltip"
              data-placement="top"
              title="Log Out"
            >
              <span aria-hidden="true" class="fa fa-sign-out-alt"></span>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
